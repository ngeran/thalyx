{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Navigation Configuration",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration version"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NavigationItem"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the navigation"
    }
  },
  "definitions": {
    "NavigationItem": {
      "type": "object",
      "required": ["id", "label"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the navigation item"
        },
        "label": {
          "type": "string",
          "description": "Display label for the navigation item"
        },
        "url": {
          "type": "string",
          "description": "URL or route for the navigation item"
        },
        "icon": {
          "type": "string",
          "description": "Icon identifier or class name"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/NavigationItem"
          },
          "description": "Child navigation items for nested menus"
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata for the navigation item"
        }
      }
    }
  }
}
